INSERT INTO Dept VALUES ('ADMN', 'ADMINISTRATION');
INSERT INTO Dept VALUES ('SALE', 'SALES');
INSERT INTO Dept VALUES ('LEGL', 'LEGAL');
INSERT INTO Dept VALUES ('PROP', 'REAL ESTATE');
INSERT INTO Dept VALUES ('TECH', 'TECH DEPARTMENT');



-- PART 2
INSERT INTO Workers VALUES ('162JMA','JONATHAN', 'ARNOLD', 'PROGRAMMER', 78000.00);

SELECT * FROM Workers;



-- PART 3
UPDATE Workers
SET Salary = 72000.00
WHERE WID = '357FRR';

SELECT * FROM Workers;



-- PART 4
ALTER TABLE WORKERS
    MODIFY JOB_TITLE varchar(18);

UPDATE Workers
SET JOB_TITLE = 'CHEIF TECH OFFICER'
WHERE WID = '907ARN';

SELECT * FROM Workers;


-- PART 5
UPDATE Workers
SET FIRST_NAME = 'WARREN' 
WHERE WID = '451WAW';

UPDATE Workers
SET LAST_NAME = 'WILLIAM'
WHERE WID = '451WAW';


SELECT * FROM Workers;
