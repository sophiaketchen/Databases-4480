SELECT * FROM AUTHOR;
SELECT * FROM GENRE;

SELECT FIRST_NAME, LAST_NAME, GENRE_NAME FROM AUTHOR, GENRE
WHERE AUTHOR.GENRE_ID = GENRE.G_ID;

SELECT FIRST_NAME, LAST_NAME, GENRE_NAME FROM AUTHOR A, GENRE G
WHERE A.GENRE_ID = G.G_ID;



