CREATE TABLE AUTHOR(
  A_Id VARCHAR(4) PRIMARY KEY NOT NULL,
  FIRST_NAME VARCHAR2(16),
  MIDDLE_NAME VARCHAR2(16),
  LAST_NAME VARCHAR2(16) NOT NULL,
  GENRE_ID VARCHAR2(4) NOT NULL
  FOREIGN KEY (GENRE_ID) REFERENCES GENRE(G_ID)
);

CREATE TABLE GENRE(
  G_ID VARCHAR(4) PRIMARY KEY NOT NULL,
  GENRE_NAME VARCHAR(18) NOT NULL
);


INSERT INTO AUTHOR VALUES ('JVOL' ,'JULES', '', 'VERNE', 'SCIF');
